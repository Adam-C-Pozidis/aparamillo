<div class="container-shelves mw-100 min-vh-100 d-flex flex-wrap justify-content-center">
  <% @shelves.each do |shelf| %>
    <div class="shelf-box text-center">
    <%= shelf.name %>
    <% shelf.cloths.each do |cloth| %>
    <div class="shelf-items">
      <%= cloth.type.name %>
      <%= cloth.user.email %>
    </div>
    <% end %>

  </div>
  <% end %>
</div>
